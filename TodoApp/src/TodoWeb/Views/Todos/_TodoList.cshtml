@model TodoWeb.Models.TodoViewModel


@if (Model.Items.Count == 0)
{
    <div class="rounded-xl border border-dashed border-slate-300 p-6 text-slate-500">No items yet. Add your first task!
    </div>
}
else
{
    <ul class="space-y-2">
        @foreach (var item in Model.Items)
        {
            <li class="flex items-center justify-between rounded-xl border border-slate-200 bg-white p-3 shadow-sm">
                <button hx-post="/todos/@item.Id/toggle" hx-target="#todo-list" hx-swap="outerHTML"
                    class="flex items-center gap-3">
                    <input type="checkbox" @(item.IsDone ? "checked" : null) class="h-5 w-5 rounded" />
                    <span class="@(item.IsDone ? "line-through text-slate-400" : "")">@item.Title</span>
                </button>
                <button hx-delete="/todos/@item.Id" hx-target="#todo-list" hx-swap="outerHTML" hx-confirm="Delete this item?"
                    class="rounded-lg border border-rose-300 bg-rose-50 px-3 py-1 text-rose-700 hover:bg-rose-100">Delete</button>
            </li>
        }
    </ul>
}